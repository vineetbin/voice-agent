# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Retell AI Configuration
# -----------------------------------------------------------------------------
# Get these from your Retell AI dashboard at https://app.retellai.com
# Retell AI provides voice agent infrastructure and real-time conversation handling

# Your Retell AI API key for authentication
RETELL_API_KEY=your_retell_api_key_here

# The ID of your configured Retell AI agent
# Create an agent in the Retell dashboard and copy its ID here
RETELL_AGENT_ID=your_agent_id_here

# Webhook secret for verifying incoming webhook requests from Retell
# Find this in your Retell dashboard under webhook settings
RETELL_WEBHOOK_SECRET=your_webhook_secret_here

# -----------------------------------------------------------------------------
# OpenAI for Post-Processing
# -----------------------------------------------------------------------------
# Get your API key from https://platform.openai.com/api-keys
# Used for conversation analysis, summarization, or other AI processing

OPENAI_API_KEY=your_openai_key_here

# -----------------------------------------------------------------------------
# Supabase Database & Auth
# -----------------------------------------------------------------------------
# Get these from your Supabase project settings at https://app.supabase.com
# Project Settings > API

# Your Supabase project URL (e.g., https://xxxxx.supabase.co)
SUPABASE_URL=your_supabase_url

# Public anonymous key - safe to use in frontend code
SUPABASE_ANON_KEY=your_supabase_anon_key

# Service role key - KEEP SECRET! Only use in backend
# Has admin privileges, never expose in frontend code
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Call mode for testing vs production
# Options: 
#   - simulated: Mock calls for development/testing without using Retell credits
#   - real: Actual phone calls through Retell AI
CALL_MODE=simulated

# Backend API server URL
# Default for local development: http://localhost:8000
BACKEND_URL=http://localhost:8000

# Frontend application URL
# Default for Vite/React dev server: http://localhost:5173
FRONTEND_URL=http://localhost:5173
